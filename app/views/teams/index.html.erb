
<link href="https://fonts.googleapis.com/css?family=Playfair+Display&display=swap" rel="stylesheet">
<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table class= "container">
  <thead>
    <tr>
      <th>Company</th>
      <th>Industry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.company %></td>
        <td><%= team.industry %></td>
        <td><%= link_to 'Find out more', team %></td>
       <div class = "link"> <td><%=link_to 'Edit', edit_team_path(team) %></td></div>
        <td><%link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% unless current_user == nil || current_user.standard_user? %>
<%= link_to 'New Team', new_team_path %>
<%end%>
