<p id="notice"><%= notice %></p>

<h1>Requests!</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>User</th>
      <th>Question</th>
      <th>Name</th>
      <th>Age</th>
      <th>Skills</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.team_id %></td>
        <td><%= request.user_id %></td>
        <td><%= request.question_id %></td>
        <td><%= request.name %></td>
        <td><%= request.age %></td>
        <td><%= request.skills %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
